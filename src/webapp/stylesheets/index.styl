*, *:before, *:after
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

html
    font-family: 'Lato', sans-serif
    font-weight: 300

html, body, #application-container, #map-container
    height: 100%
    padding: 0
    margin: 0

body
    background-color: #f5f5f5

#map-container
    // using for tiles same color as for body
    background-color: #f5f5f5 !important

.vhc-container
    position: relative
    height: 100%
    padding: 0
    margin: 0
    .vhc
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        width: 50%
        height: 50%
        margin: auto
        overflow: auto

.veil
    position: fixed
    top: 0
    left: 0
    z-index: 10
    width: 100%
    height: 100%
    background: rgba(255, 255, 255, 0.5)
    .center
        position: fixed
        top: 50%
        left: 50%

.bb-container
    position: absolute
    z-index: 9999
    pointer-events: none
    .bb
        display: table
        padding: 10px
        margin-top: 3px
        text-align: center
        pointer-events: auto
        background-color: #fff
        border-right: 1px solid #f6f6f6
        border-left: 3px solid #a00
        border-top-right-radius: 2px
        border-bottom-right-radius: 2px
        -webkit-box-shadow: rgba(0, 0, 0, 0.298039) 0 1px 4px -1px
        box-shadow: rgba(0, 0, 0, 0.298039) 0 1px 4px -1px
        .bb-divider
            padding: 0 3px
    .bb-compact
        padding: 6px 10px

.logo
    font-family: 'Raleway', sans-serif
    font-size: 20px
    font-weight: 400
    letter-spacing: 0.1em
    cursor: default

.hint
    display: block
    font-size: small

a.icon
    color: #666
    -webkit-transition: all 0.3s
    -moz-transition: all 0.3s
    transition: all 0.3s
    &:hover
        color: #999

.no-js
    #application-container
        display: none

.unsupported-env
    padding: 8px 6px 12px
    font-size: 0.875em
    color: #fff
    text-align: center
    background-color: #a00
    a
        color: #fff

#recovery-container
    text-align: center

#empty-proxy-list
    margin-bottom: 3px
    text-align: center

.selectize-control
    min-height: 39px

.github-fork-ribbon a,
.github-fork-ribbon a:hover
    font-family: 'Lato', sans-serif
    font-size: 14px
    font-weight: 300
